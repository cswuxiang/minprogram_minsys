/*
 -------------------------------
 通用基础样式 app.wxss
 -------------------------------
 */
 input{min-height: 1rem;}

/* 隐藏 */
.hide{display:none!important;}
.hidden {visibility: hidden}

/* 浮动 */
.float-l{float:left;}
.float-r{float:right;}

/*  清除浮动  */
.clearfix:after{content:".";clear:both;display:block;height:0;visibility:hidden;}

/*  flex布局  */
.flex{display:-webkit-box; display:-webkit-flex; display:flex;}
.flex-v{-webkit-box-orient:vertical; -webkit-flex-direction:column; flex-direction:column;}
.flex-1{-webkit-box-flex:1; -webkit-flex:1; flex:1;}
.flex-h-justify{-webkit-box-pack:justify; -webkit-justify-content:space-between; justify-content:space-between;}
.flex-h-hcenter{-webkit-box-pack:center; -webkit-justify-content:center; justify-content:center;}
.flex-h-vcenter{-webkit-box-align:center; -webkit-align-items:center; align-items:center;}

/* 通用结构 */
page{height: 100%;background: #f6f6fb;}
.conatiner{min-height: 100%;display:-webkit-box;display:-webkit-flex;display:flex;-webkit-box-orient:vertical;-webkit-flex-direction:column;flex-direction:column;}
.main{-webkit-box-flex:1;-webkit-flex:1;flex:1;padding-bottom: 120rpx;}

/* 滚动通用设置 */
.ui-scroll{height: 100%;}
.ui-scroll .ui-wrap{max-height: 100%;}
.ui-scroll .ui-main{height: 100%;overflow-y: scroll; /* 注意：overflow这里为了重构显示,不要合到前端环境 */}
.ui-scroll .scroll-main{height: 100%;overflow-y: scroll; /* 注意：overflow这里为了重构显示,不要合到前端环境 */}

/* 通用设置 */
.ui-tit{font-size: 28rpx;color: #888;padding: 30rpx 30rpx 10rpx;} /* 通用标题 */
.ui-desc{font-size: 28rpx;color: #888;padding: 16rpx 30rpx;} /* 通用描述 */
.ui-placeholder{color:#b2b2b2;line-height: 48rpx;} /* placeholder颜色 */
.ui-link{color: #576B95; display: inline-block;} /* 链接 */
.ui-active{background-color: #d9d9d9 !important;} /* 点击效果 */
.ui-money{font-size: 48rpx;font-weight: bold;} /* 金额 */
.ui-yen{font-family: "simsun";margin-right: 10rpx;} /* 金额符号 */
.ui-r{text-align: right;}
.color-main{color: #1AAD19 !important;}
.color-warn{color: #E64340 !important;}
.color-em{color: #FF8A01 !important;}

/* 協議 */
.ui-protocol{padding: 10rpx 30rpx;font-size: 26rpx;margin-bottom: 20rpx;color: #999;}
.ui-protocol .ui-link{font-size: 26rpx;color: #7888a8;}
.ui-protocol checkbox{position: relative;top: -7rpx;zoom: 0.5;}

/**
  * @name      : mod-footer
  * @explain   : 页脚模块（默认为不足一屏时置于底部）
  */
.mod-footer{width: 100%;text-align: center;color: #B2B2B2;font-size: 20rpx;padding-top:30rpx;padding-bottom:30rpx;line-height: 1.4;}
.mod-footer .footer-gap{color: #999;padding: 0 14rpx;vertical-align: middle;}
